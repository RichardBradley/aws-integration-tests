{
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "target": "es2022",
    "strict": true,
    "outDir": ".build",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ],
    "baseUrl": ".",
  },
  "exclude": ["node_modules"],
  "ts-node": {
    "require": []
  }
}
